{% extends 'base.jinja2' %}

{% block title -%}
{{_("Login page")}}
{% endblock %}

{% block middle %}

<div class="Middle">
  <div class="Section">
      <div class="wrap">
        <div class="wrapper">
          <h2>{% block name %} {{_("Login page")}} {% endblock %}</h2>
          {% block content %}
          {% if form.errors %}
          <p>{{ form.errors }}</p>
          {% endif %}


          <form method="post">
          {% csrf_token %}
          <p>
<!--            <label for="id_username">Email address:</label>-->
            <input class="user-input" type="text" name="username" autofocus autocapitalize="none" autocomplete="username" maxlength="254" required id="id_username" placeholder="E-mail">
          </p>
          <p>
<!--            <label for="id_password">Password:</label>-->
            <input class="user-input" type="password" name="password" autocomplete="current-password" required id="id_password" placeholder="*********">
          </p>
          <input type="submit" value="Login">
          <a class="forgot-label" href="{{url('profiles:reset_password')}}">{{_("Забыли пароль?")}}</a>
          <a class="registr" href="{{ url('profiles:register') }}">{{_("Регистрация")}}</a>
                    <!--    <button type="submit" class="btn btn_square btn_dark">Login</button>-->
          </form>
          {% endblock %}
      </div>
    </div>
  </div>
</div>

{% endblock %}
