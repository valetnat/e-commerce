                     <label for="push-form-offer-{{offer.pk}}" tabindex="0" class="btn btn_primary">
                        <img class="btn-icon" src="{{ static('assets/img/icons/card/cart_white.svg')}}" alt="cart_white.svg" />
                        <span class="btn-content">{{_("Купить")}} </span>
                    </label>
                </div>
            </div>
