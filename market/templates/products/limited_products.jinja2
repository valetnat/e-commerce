<div class="Slider Slider_carousel">
    <header class="Section-header Section-header_close">
        <h2 class="Section-title">{{_("Ограниченный тираж")}}</h2>
        <div class="Section-control">
            <div class="Slider-navigate"></div>
        </div>
    </header>
    <div class="Slider-box Cards">
        {% for limited_product in limited_products %}
            <div class="Slider-item">
                <div class="Slider-content">
                    <div class="Card"><a class="Card-picture" href="{{ url('products:product-detail', pk=limited_product.product.pk ) }}"><img src="{{ limited_product.product.preview.url }}" alt="card.jpg" style="width: 200px;"/></a>
                        <div class="Card-content">
                            <strong class="Card-title"><a href="{{ url('products:product-detail', pk=limited_product.product.pk ) }}">{{ limited_product.product.name }}</a>
                            </strong>
                            <div class="Card-description">
                                <div class="Card-cost"><span class="Card-price">{{ limited_product.price }}₽</span>
                                </div>
                                <div class="Card-category">{{ limited_product.product.category.name }}
                                </div>
                                <div class="Card-hover">
<!--                                    <a class="Card-btn" href="#"><img src="{{ static('assets/img/icons/card/cart.svg') }}" alt="cart.svg" /></a>-->
                                     <form action="{{ url('cart:add_cart') }}" method="post">
                                        {% csrf_token %}
                                        <input type="hidden" name="offer_id" value="{{ limited_product.pk }}">
                                        <input type="hidden" name="amount" value="1">
                                        <button class="Card-btn" type="submit" onmouseover="this.style.backgroundColor='#d2e7ff';" onmouseout="this.style.backgroundColor='#ebebeb';">
                                            <img src="{{ static('assets/img/icons/card/cart.svg') }}" alt="cart.svg"/>
                                        </button>
                                     </form>
                                     <form action="{{ url('comparison:comparison_add') }}" method="post">
                                        {% csrf_token %}
                                        <input type="hidden" id="product_id" name="product_id" value="{{ limited_product.product.pk }}">
                                        <button class="Card-btn" type="submit" onmouseover="this.style.backgroundColor='#d2e7ff';" onmouseout="this.style.backgroundColor='#ebebeb';">
                                            <img src="{{ static('assets/img/icons/card/change.svg') }}" alt="change.svg"/>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
