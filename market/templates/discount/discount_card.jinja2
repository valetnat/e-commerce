<div class="Card"><a class="Card-picture" href="{{url('discount:' + promo.disc_type, promo.pk)}}">
{% if promo.preview %}
<img src="{{url_method(promo.preview)}}" alt="promo.png"></a>
{% else %}
<img src="" alt="promo.png"></a>
{% endif %}
    <div class="Card-date">
        <strong class="Card-date-number">{{promo.active_from.strftime('%d')}}
        </strong><span class="Card-date-month">{{_(promo.active_from.strftime('%b'))}}</span>
    </div>
    {% if (promo.active_to - promo.active_from).days > 1 %}
    <div class="Card-date Card-date_to">
        <strong class="Card-date-number">{{promo.active_to.strftime('%d')}}
        </strong><span class="Card-date-month">{{_(promo.active_to.strftime('%b'))}}</span>
    </div>
    {% endif %}
    <div class="Card-content">
        <strong class="Card-title"><a href="{{url('discount:' + promo.disc_type, promo.pk)}}">{{promo.name}}</a>
        </strong>
        <div class="Card-description">{{promo.description}}
        </div>
    </div>
